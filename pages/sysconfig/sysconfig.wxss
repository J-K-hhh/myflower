.container { padding: 16rpx 24rpx 120rpx; }
.section { background: #fff; border-radius: 16rpx; padding: 20rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
.section-title { font-weight: 600; font-size: 30rpx; margin-bottom: 12rpx; }
.subsection { margin-top: 16rpx; padding-top: 12rpx; border-top: 1px solid #f0f0f0; }
.sub-title { font-weight: 500; margin-bottom: 8rpx; color: #555; }
.field { display: flex; align-items: center; gap: 16rpx; margin: 10rpx 0; }
.label { width: 240rpx; color: #666; }
.input { flex: 1; border: 1px solid #e5e5e5; border-radius: 8rpx; padding: 12rpx; }
.radio-item { margin: 8rpx 0; }
.picker { padding: 12rpx; border: 1px solid #e5e5e5; border-radius: 8rpx; background: #fafafa; }
.actions { position: fixed; left: 0; right: 0; bottom: 0; background: #fff; padding: 20rpx; box-shadow: 0 -6rpx 18rpx rgba(0,0,0,0.06); display: flex; gap: 20rpx; }
.btn { flex: 1; background: #07c160; color: #fff; border-radius: 12rpx; padding: 18rpx 0; text-align: center; }
.btn.secondary { background: #f6f6f6; color: #333; }

