.container { padding: 16rpx; }
.preview { width: 100%; height: 380rpx; overflow: hidden; border-radius: 12rpx; }
.image { width: 100%; height: 100%; }
.section { margin-top: 24rpx; }
.label { font-size: 28rpx; color: #333; margin-bottom: 12rpx; }
.picker { display: flex; align-items: center; padding: 20rpx; border: 1px solid #eee; border-radius: 12rpx; }
.picker-icon { margin-right: 12rpx; }
.actions { display: flex; justify-content: space-between; margin-top: 32rpx; }
.btn { flex: 1; margin: 0 8rpx; }
.cancel { background: #f5f5f5; color: #333; }

