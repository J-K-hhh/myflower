.share-container {
  padding: 20rpx;
}
.header {
  margin-bottom: 16rpx;
}
.title-line {
  font-size: 34rpx;
  font-weight: 600;
}
.plant-name { color: #2c3e50; }
.owner { color: #7f8c8d; margin-left: 8rpx; }
.sub-line { color: #95a5a6; font-size: 24rpx; }

.hero { position: relative; margin: 10rpx 0 16rpx; }
.gallery { width: 100%; height: 420rpx; border-radius: 16rpx; overflow: hidden; background: #000; }
.hero-image { width: 100%; height: 100%; background: #000; }
.quick-actions {
  position: absolute; right: 12rpx; top: 12rpx; display: flex; gap: 8rpx;
}
.qa-btn { background: rgba(255,255,255,0.9); border-radius: 24rpx; padding: 6rpx 14rpx; }

.overlay {
  position: absolute;
  left: 0; right: 0; bottom: 0;
  padding: 16rpx;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 60%, rgba(0,0,0,0.7) 100%);
  color: #fff;
}
.memo-on-image {
  font-size: 26rpx; line-height: 1.4; margin-bottom: 8rpx;
}
.comments-on-image { max-height: 120rpx; overflow: hidden; }
.comment-line { font-size: 24rpx; opacity: 0.95; }

.activity-strip {
  display: flex; align-items: center; gap: 8rpx; background: #f3fbf5; border: 1rpx solid #cde6d0; color: #2e7d32;
  padding: 12rpx; border-radius: 12rpx; margin-bottom: 12rpx;
}
.clock { font-size: 28rpx; }
.status-text { font-size: 26rpx; }

.memo-block { background: #fffaf2; border: 1rpx solid #ffe0b2; border-radius: 12rpx; padding: 12rpx; margin-bottom: 14rpx; }
.memo-title { display: block; font-size: 24rpx; color: #8d6e63; margin-bottom: 6rpx; }
.memo-text { font-size: 26rpx; color: #6d4c41; }

.comment-section { background: #ffffff; border-radius: 12rpx; padding: 12rpx; border: 1rpx solid #ecf0f1; margin-bottom: 16rpx; }
.comment-header { display: flex; align-items: center; gap: 8rpx; margin-bottom: 8rpx; }
.comment-count { color: #7f8c8d; font-size: 24rpx; }
.comment-item { margin: 6rpx 0; color: #2c3e50; }
.comment-item .nick { font-weight: 600; }
.comment-item .time { color: #95a5a6; margin-left: 10rpx; font-size: 22rpx; }
.comment-input { display: flex; gap: 8rpx; margin-top: 8rpx; }
.comment-input input { flex: 1; border: 1rpx solid #ecf0f1; border-radius: 8rpx; padding: 10rpx; }
.comment-input .send { background: #4caf50; color: #fff; border-radius: 8rpx; }

.tools { display: flex; gap: 10rpx; margin: 10rpx 0 16rpx; }
.tools .primary { flex: 1; background: #4caf50; color: #fff; }
.tools .secondary { flex: 1; background: #e8f5e9; color: #2e7d32; }

.history-strip { margin-top: 6rpx; }
.history-scroll { white-space: nowrap; }
.history-items { display: inline-flex; gap: 10rpx; }
.history-item { background: #f5f6fa; border: 1rpx solid #ecf0f1; padding: 8rpx 12rpx; border-radius: 20rpx; color: #636e72; font-size: 24rpx; }

.enter-detail { margin: 16rpx 0 40rpx; }
.enter-detail button { background: #ffffff; border: 1rpx solid #cfd8dc; border-radius: 10rpx; }

.enter-home { margin: 0 0 20rpx; }
.enter-home button {
  width: 100%;
  background: #f6f6f6;
  color: #333;
  border-radius: 12rpx;
  padding: 20rpx 0;
  border: 1rpx solid #e5e5e5;
}
