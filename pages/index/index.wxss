.container {
  padding: 20rpx 10rpx;
  min-height: 100vh;
  position: relative;
  padding-top: 20rpx !important; /* 确保使用自己的padding-top */
  padding-bottom: 180rpx !important; /* 为底部固定操作栏留出空间 */
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.1) 100%);
  z-index: 1;
}

/* 添加叶子剪影装饰 */
.container::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 85% 15%, rgba(255, 255, 255, 0.1) 2px, transparent 2px),
    radial-gradient(circle at 15% 85%, rgba(255, 255, 255, 0.08) 3px, transparent 3px),
    radial-gradient(circle at 90% 80%, rgba(255, 255, 255, 0.06) 1.5px, transparent 1.5px);
  background-size: 200rpx 200rpx, 300rpx 300rpx, 150rpx 150rpx;
  z-index: 0.5;
  pointer-events: none;
}

