/**pages/index/index.wxss**/
.container {
  padding: 20rpx 10rpx;
  min-height: 100vh;
  position: relative;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.1) 100%);
  z-index: 1;
}

/* 添加叶子剪影装饰 */
.container::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 85% 15%, rgba(255, 255, 255, 0.1) 2px, transparent 2px),
    radial-gradient(circle at 15% 85%, rgba(255, 255, 255, 0.08) 3px, transparent 3px),
    radial-gradient(circle at 90% 80%, rgba(255, 255, 255, 0.06) 1.5px, transparent 1.5px);
  background-size: 200rpx 200rpx, 300rpx 300rpx, 150rpx 150rpx;
  z-index: 0.5;
  pointer-events: none;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 25rpx;
  margin: 40rpx 0;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.05),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.empty-text {
  font-size: 36rpx;
  color: #2c3e50;
  margin-bottom: 15rpx;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  line-height: 1.4;
}

.empty-tip {
  font-size: 28rpx;
  color: #7f8c8d;
  font-weight: 400;
  line-height: 1.3;
}

/* 绿植列表样式 */
.plant-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 120rpx;
  padding: 0 5rpx;
  position: relative;
  z-index: 2;
}

/* 状态图标容器 */
.status-icon-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.status-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  animation: gentle-bounce 2s ease-in-out infinite;
}

.status-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

@keyframes gentle-bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4rpx); }
}

.plant-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 25rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  width: calc(50% - 5rpx);
  min-width: 300rpx;
  box-sizing: border-box;
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* 当只有1盆植物时，卡片居中显示且更大 */
.plant-list.single-plant {
  justify-content: center;
}

.plant-list.single-plant .plant-card {
  width: 85%;
  max-width: 550rpx;
  margin: 0 auto 20rpx auto;
}

/* 当有2盆植物时，卡片稍微大一些 */
.plant-list.two-plants {
  justify-content: space-around;
}

.plant-list.two-plants .plant-card {
  width: calc(45% - 10rpx);
  min-width: 340rpx;
  max-width: 400rpx;
}

/* 当有3盆或更多植物时，使用标准的两列布局 */
.plant-list.multiple-plants {
  justify-content: space-between;
}

.plant-list.multiple-plants .plant-card {
  width: calc(50% - 5rpx);
  min-width: 300rpx;
}

.plant-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.2);
}

.card-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

/* 不同数量下的卡片图片高度优化 */
.plant-list.single-plant .card-image {
  height: 500rpx;
}

.plant-list.two-plants .card-image {
  height: 450rpx;
}

.plant-list.multiple-plants .card-image {
  height: 400rpx;
}

.card-content {
  padding: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #5a6c7d;
  overflow: hidden;
  font-weight: 500;
}

.info-icon {
  margin-right: 10rpx;
  font-size: 20rpx;
  flex-shrink: 0;
}

.info-item text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

/* 添加按钮样式 */
.add-button {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #00d4aa 0%, #00a085 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 212, 170, 0.4),
    0 0 0 4rpx rgba(255, 255, 255, 0.8),
    0 0 0 8rpx rgba(0, 212, 170, 0.2),
    0 0 0 16rpx rgba(0, 212, 170, 0.1);
  z-index: 10;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  animation: gentle-pulse 3s ease-in-out infinite;
}

.add-button:active {
  transform: scale(0.9);
  box-shadow: 
    0 4rpx 16rpx rgba(0, 212, 170, 0.6),
    0 0 0 2rpx rgba(255, 255, 255, 0.9),
    0 0 0 6rpx rgba(0, 212, 170, 0.3),
    0 0 0 12rpx rgba(0, 212, 170, 0.15);
}

@keyframes gentle-pulse {
  0%, 100% { 
    transform: scale(1);
    box-shadow: 
      0 8rpx 32rpx rgba(0, 212, 170, 0.4),
      0 0 0 4rpx rgba(255, 255, 255, 0.8),
      0 0 0 8rpx rgba(0, 212, 170, 0.2),
      0 0 0 16rpx rgba(0, 212, 170, 0.1);
  }
  50% { 
    transform: scale(1.05);
    box-shadow: 
      0 12rpx 40rpx rgba(0, 212, 170, 0.5),
      0 0 0 4rpx rgba(255, 255, 255, 0.9),
      0 0 0 8rpx rgba(0, 212, 170, 0.3),
      0 0 0 16rpx rgba(0, 212, 170, 0.15);
  }
}

.add-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

/* 设置按钮样式 */
.settings-button {
  position: fixed;
  top: 50rpx;
  right: 50rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.1),
    0 0 0 2rpx rgba(255, 255, 255, 0.8);
  z-index: 10;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.settings-button:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 1);
}

.settings-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.1));
}
