/**pages/detail/detail.wxss**/
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
  padding-top: 0 !important; /* 覆盖全局的padding-top */
}

/* 图片轮播 */
.image-swiper {
  width: 100%;
  height: 1000rpx;
}

.image-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.image-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  gap: 10rpx;
  z-index: 10;
}

.action-btn {
  background: rgba(0, 0, 0, 0.3);
  color: rgba(255, 255, 255, 0.8);
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  backdrop-filter: blur(5rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.2s ease;
}

.action-btn:active {
  background: rgba(0, 0, 0, 0.5);
  color: white;
}

.action-btn.delete {
  background: rgba(255, 77, 77, 0.4);
  color: rgba(255, 255, 255, 0.9);
}

.action-btn.delete:active {
  background: rgba(255, 77, 77, 0.7);
  color: white;
}

.cover-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: rgba(7, 193, 96, 0.9);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

/* V0.3 图片信息显示样式 */
.image-info-overlay {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
  border-radius: 15rpx;
  padding: 15rpx 20rpx;
  z-index: 5;
}

.image-date {
  color: white;
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.image-memo {
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  line-height: 1.4;
  display: flex;
  align-items: flex-start;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  transition: background 0.3s ease;
}

.image-memo:active {
  background: rgba(255, 255, 255, 0.2);
}

.add-memo-btn {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx dashed rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.add-memo-btn:active {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.5);
}

.memo-edit-container {
  margin-top: 10rpx;
}

.memo-edit-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 24rpx;
  color: #333;
  border: 2rpx solid #00d4aa;
  box-sizing: border-box;
  min-height: 60rpx;
  max-height: 120rpx;
}

.memo-edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
  margin-top: 10rpx;
}

.memo-btn {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.memo-btn.save {
  background: #00d4aa;
  color: white;
}

.memo-btn.save:active {
  background: #00a085;
}

.memo-btn.cancel {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.memo-btn.cancel:active {
  background: rgba(255, 255, 255, 0.3);
}

/* V0.3 图片顺序调整样式 */
.image-order-actions {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 10;
}

.order-btn {
  background: rgba(0, 0, 0, 0.6);
  color: white;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.order-btn:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.9);
}

/* 内容区域 */
.content-box {
  padding: 20rpx;
}

.plant-title-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 15rpx;
  position: relative;
}

.plant-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
}

.plant-title-edit {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
  border: 2rpx solid #07c160;
  border-radius: 8rpx;
  padding: 10rpx;
  background: #f8f9fa;
}

.edit-icon {
  font-size: 32rpx;
  color: #07c160;
  margin-left: 20rpx;
  padding: 10rpx;
  border-radius: 8rpx;
  background: rgba(7, 193, 96, 0.1);
}

/* 信息卡片 */
.info-section {
  margin: 20rpx 0;
}

.info-card {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  position: relative;
  transition: all 0.3s ease;
}

.info-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.15);
}

.info-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.info-text {
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.history-btn {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #07c160;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 百科信息 */
.baike-section {
  background: #fff;
  border-radius: 15rpx;
  padding: 25rpx;
  margin: 20rpx 0;
}

.baike-description {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin: 15rpx 0;
}

.baike-link {
  color: #07c160;
  font-size: 24rpx;
  text-decoration: underline;
  margin-top: 15rpx;
}

/* 养护要点 */
.care-tips-section {
  background: #fff;
  border-radius: 15rpx;
  padding: 25rpx;
  margin: 20rpx 0;
}

.care-tips {
  margin-top: 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  background: #f8f9fa;
  padding: 20rpx;
  margin: 15rpx 0;
  border-radius: 10rpx;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.tip-content {
  flex: 1;
}

.tip-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 通义千问VL详细结果样式 */
.qwen-detail-section {
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.qwen-field {
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e8f5e8 100%);
  border-radius: 12rpx;
  border: 1rpx solid rgba(76, 175, 80, 0.1);
}

.qwen-field:last-child {
  margin-bottom: 0;
}

.qwen-field-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.qwen-field-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  text-align: justify;
  background: rgba(255, 255, 255, 0.8);
  padding: 12rpx;
  border-radius: 8rpx;
}

/* 操作按钮组 - 新的布局 */
.action-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 15rpx;
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.action-btn {
  height: 80rpx;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

/* 删除按钮区域 - 页面最下方 */
.delete-section {
  margin: 40rpx 20rpx 60rpx 20rpx;
  display: flex;
  justify-content: center;
}

.delete-plant-btn {
  width: 100%;
  max-width: 400rpx;
  height: 80rpx;
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.3);
  transition: all 0.2s ease;
}

.delete-plant-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}



/* 历史记录弹窗样式 */
.history-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.history-content {
  width: 85%;
  max-width: 650rpx;
  max-height: 80%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.history-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
  line-height: 1;
}

.history-list {
  max-height: 600rpx;
  padding: 20rpx;
}

.history-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 60rpx;
}

.history-item:last-child {
  border-bottom: none;
}

.history-date {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  text-align: left;
  margin-bottom: 10rpx;
}

.history-content {
  margin-top: 10rpx;
}

.health-analysis {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  background: #f8f9fa;
  padding: 15rpx;
  border-radius: 8rpx;
  display: block;
  text-align: justify;
}

.history-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}