/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用样式 */
.section {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.title-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

/* 按钮样式 */
.button {
  background: #07c160;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.button:disabled {
  background: #ccc;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

/* 养护要点样式 */
.care-tips {
  margin-top: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin: 15rpx 0;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 15rpx;
  margin-top: 5rpx;
}

.tip-content {
  flex: 1;
}

.tip-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}
